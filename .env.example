# Database
DATABASE_URL=postgresql://rcm_user:rcm_password@localhost:5432/rcm_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret
SECRET_KEY=your-super-secret-key-here

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key

# Tenant Configuration (for multi-tenant)
TENANT_ID=default

# Rule Thresholds (configurable)
PAID_AMOUNT_THRESHOLD=1000
APPROVAL_NUMBER_MIN=100000

# CORS Configuration (12-Factor compliant)
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Other configs
DEBUG=True
